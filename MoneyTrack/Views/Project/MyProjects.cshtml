@model List<MoneyTrack.Models.Investment>

<h1>My Investments</h1>

@if (Model.Count == 0)
{
    <p>You have not invested in any projects yet.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Investment Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var investment in Model)
            {
                <tr>
                    <td>@investment.Project.ProjectName</td>
                    <td>@investment.Amount.ToString("C")</td>
                    <td>@investment.InvestmentDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
